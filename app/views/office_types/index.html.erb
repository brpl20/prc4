<div class="col-md-12 col-sm-12">

  <h1 class="pull-left mg-left">Tipos de Escritórios</h1>

  <%= link_to new_office_type_path, class:"btn btn-success pull-right btn-new" do %>
    <i class="fa fa-plus"></i> Novo Tipo de Escritório
  <% end %>

  <div class="x_panel">
    <div class="x_content">
      <div class="row">
        <div class="col-sm-12">

          <table id="datatable-list" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" role="grid" aria-describedby="datatable-responsive_info">
            <thead>
              <tr role="row">
                <th>#</th>
                <th>Tipo de Escritório</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
                <% @office_types.each do |ot| %>
                  <tr role="row">
                    <td><%= ot.id %></td>
                    <td><%= ot.description %></td>
                    <td>

                      <%= link_to edit_office_type_path(ot), class:"btn btn-primary" do %>
                        <i class="fa fa-edit"></i>
                      <% end %>

                      <%= link_to office_type_path(ot), class:"btn btn-danger",
                          method: :delete, data: {confirm: "Tem certeza que deseja apagar"} do %>
                          <i class="fa fa-times"></i>
                      <% end %>

                    </td>
                  </tr>
                <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>
