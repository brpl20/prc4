<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application'%>
    <%= stylesheet_link_tag    'backoffice'%>

  </head>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col menu_fixed">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">

              <a href="index.html" class="site_title">
                <%= image_tag 'logo-proc-estudio', id:'logo-bola' %>
                <span id="title-logo">Advocacia e Justiça</span>
              </a>
            </div>

            <div class="clearfix"></div>

            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

              <div class="menu_section">
                <ul class="nav side-menu">
                  <li>
                    <%= link_to pages_dashboard_path do  %>
                      <i class="fa fa-home"></i> Home
                    <% end %>
                  </li>
                </ul>
              </div>

              <div class="menu_section">

                <h3>Configs</h3>
                <ul class="nav side-menu">

                  <li>
                    <%= link_to new_client_path do %>
                      <i class="fa fa-male"></i> Novo Cliente
                      <span class="fa fa-plus"></span>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to new_work_path do %>
                      <i class="fa fa-gavel"></i> Novo Work
                      <span class="fa fa-plus"></span>
                    <% end %>
                  </li>

                </ul>
              </div>

              <div class="menu_section">

                <h3>Admin</h3>
                <ul class="nav side-menu">

                  <li>
                    <%= link_to lawyers_path do %>
                      <i class="fa fa-user"></i> Advogado
                      <span class="fa fa-chevron-right"></span>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to clients_path do %>
                      <i class="fa fa-users"></i> Clientes
                      <span class="fa fa-chevron-right"></span>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to "#" do %>
                      <i class="fa fa-group"></i> Usuários
                      <span class="fa fa-chevron-right"></span>
                    <% end %>
                  </li>

                  <li>
                    <%= link_to new_client_path do %>
                      <i class="fa fa-university"></i> Escritório
                      <span class="fa fa-chevron-right"></span>
                    <% end %>
                  </li>

                </ul>
              </div>

            </div>
            <!-- /sidebar menu -->

          </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
            <div class="nav_menu">
                <div class="nav toggle">
                  <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                </div>
                <nav class="nav navbar-nav">
                <ul class=" navbar-right">
                  <li class="nav-item dropdown open text-right" style="padding-left: 15px;">
                    <a href="javascript:;" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                      <% if user_signed_in? %>
                        <b><%= current_user.email %></b>
                      <% end %>
                    </a>

                    <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">

                      <%= link_to "Perfil", edit_user_registration_path, class:"dropdown-item" %>

                      <%= link_to destroy_user_session_path, method: :delete, class:"dropdown-item" do %>
                        <i class="fa fa-sign-out pull-right"></i> Sair
                      <% end %>

                    </div>

                    <div class="nav-item">
                      <% if user_signed_in? %>
                        <span><b>Atribuições:</b></span>
                        <%= current_user.lawyer_role ? 'Advogado,' : '' %>
                        <%= current_user.paralegal_role ? 'Paralegal,' : '' %>
                        <%= current_user.secretary_role ? 'Secretária,' : '' %>
                        <%= current_user.intern_role ? 'Estagiário' : '' %>
                      <% end %>
                    </div>
                  </li>

                </ul>
              </nav>
            </div>
          </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
            <div class="page-title">

                <%#= render 'shared/navbarsimple' %>
                <%#= render 'layouts/alerts' %>

                <div class="container">
                  <%= yield %>
                </div>

            </div>
        </div>
        <!-- /page content -->

        <footer>
          <div class="clearfix">
            <%= render 'shared/footer' %>
          </div>
        </footer>

      </div>
    </div>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'backoffice' %>
    <%= javascript_pack_tag 'application' %>

  </body>
</html>
