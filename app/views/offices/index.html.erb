<div class="col-md-12 col-sm-12">

  <h1 class="pull-left">Escritórios</h1>

  <%= link_to new_office_path, class:"btn btn-success pull-right btn-new" do %>
    <i class="fa fa-plus"></i> Novo Escritório
  <% end %>

  <div class="x_panel">
    <div class="x_content">
      <div class="row">
        <div class="col-sm-12">

          <table id="datatable-list" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" role="grid" aria-describedby="datatable-responsive_info">
            <thead>
              <tr role="row">
                <th>#</th>
                <th>Nome</th>
                <th>CNPJ</th>
                <th>Tipo</th>
                <th>Cidade</th>
                <th>Site</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
                <% @offices.each do |o| %>
                  <tr role="row">
                    <td><%= o.id %></td>
                    <td><%= o.name %></td>
                    <td><%= o.cnpj_number %></td>
                    <td><%= o.society %></td>
                    <td><%= o.city %></td>
                    <td><%= o.site %></td>
                    <td>
                      <%= link_to office_path(o), class:"btn btn-info" do %>
                        <i class="fa fa-eye"></i>
                      <% end %>

                      <%= link_to edit_office_path(o), class:"btn btn-primary" do %>
                        <i class="fa fa-edit"></i>
                      <% end %>

                      <%= link_to office_path(o), class:"btn btn-danger",
                          method: :delete, data: {confirm: "Tem certeza que deseja apagar"} do %>
                          <i class="fa fa-times"></i>
                      <% end %>

                    </td>
                  </tr>
                <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>
