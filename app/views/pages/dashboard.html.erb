<div class="col-md-12 col-sm-12">
  <h1 class=" mg-left">Área Administrativa</h1>

  <div class="col-md-6 col-sm-6">

    <div class="x_panel">

      <div class="x_title">
        <h2>Clientes</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
        </ul>
        <div class="clearfix"></div>
      </div>

      <div class="x_content">
        <div class="card-box table-responsive">

          <div id="datatable-responsive_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap no-footer">

            <div class="row">
              <div class="col-sm-12">

                <table id="datatable-dash" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" role="grid" aria-describedby="datatable-responsive_info">
                  <thead>
                    <tr role="row">
                      <th>#</th>
                      <th>Nome</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% @clients.each do |c| %>
                        <tr role="row">
                          <td><%= c.id %></td>
                          <td><%= link_to "#{c.name} #{c.lastname}", client_path(c.id)%></td>
                        </tr>
                      <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6 col-sm-6">
    <div class="x_panel">

      <div class="x_title">
        <h2>Últimas ações</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
        </ul>
        <div class="clearfix"></div>
      </div>

      <div class="x_content">
        <ul class="list-unstyled timeline">
          <% @works.each do |w| %>
            <li>
              <div class="block">

                <div class="tags">
                  <a href="" class="tag">
                    <% if w.user.user_profile.name %>
                      <span><%= w.user.user_profile.full_name %></span>
                      <% else %>
                        <span>nil</span>
                    <% end %>
                  </a>
                </div>

                <div class="block_content">
                  <h2 class="title"><%= w.subject %> -
                    <%#= w.clients.first.name %></h2>
                  <div class="byline">
                    <%= localize(w.created_at, :format => :long) %>
                  </div>

                  <% w.procedures.each do |p| %>
                    <p class="excerpt">
                      <%= p.description %>
                      <%= link_to "Ver mais.", work_path(w) %>
                    </p>
                  <% end %>

                </div>

              </div>
            </li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>

</div>
