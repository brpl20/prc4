<div class="col-md-12 col-sm-12">

  <h1 class="pull-left">Jobs</h1>

  <%= link_to new_job_path, class:"btn btn-success pull-right btn-new" do %>
    <i class="fa fa-plus"></i> Novo job
  <% end %>

  <div class="x_panel">
    <div class="x_content">
      <div class="row">
        <div class="col-sm-12">
          <table id="datatable-list" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" role="grid" aria-describedby="datatable-responsive_info">
            <thead>
              <tr role="row">
                <th>#</th>
                <th>Descrição</th>
                <th>Prazo</th>
                <th>Responsável</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
                <% @jobs.each do |j| %>
                  <tr role="row">
                    <td><%= j.id %></td>
                    <td><%= j.description %></td>
                    <td><%= j.deadline %></td>
                    <td><%= j.responsable %></td>
                    <td><%= j.status %></td>
                <% end %>
                    <td></td>
                    
                  </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
