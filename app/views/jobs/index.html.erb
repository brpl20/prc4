<div class="col-md-12 col-sm-12">

  <h1 class="pull-left mg-left">Tarefas</h1>

  <div class="x_panel">
    <div class="x_content">
      <div class="row">
        <div class="col-sm-12">

          <table id="datatable-list" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" role="grid" aria-describedby="datatable-responsive_info">
            <thead>
              <tr role="row">
                <th>#</th>
                <th>Descrição</th>
                <th>Cliente</th>
                <th>Trabalho</th>
                <th>Data limite</th>
                <th>Status</th>
                <th class="table-actions">Ações</th>
              </tr>
            </thead>
            <tbody>
                <% @jobs.each do |job| %>
                  <tr role="row">
                    <td><%= job.id %></td>

                    <td><%= job.description %></td>

                    <td><%= job.client.name %></td>

                    <td>
                      <% if job.work_id %>
                        <%= job.id %>
                      <% else %>
                        <p>Não vinculado</p>
                      <% end %>
                    </td>

                    <td><%= job.deadline %></td>

                    <td><%= retrieve_value_from_array(options_for_job_status, job.status.to_i) %></td>

                    <td class="table-action-content">
                      <%= link_to job_path(job), class:"btn btn-info" do %>
                        <i class="fa fa-eye"></i>
                      <% end %>

                      <%= link_to edit_job_path(job), class:"btn btn-primary" do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                    </td>

                  </tr>
                <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
