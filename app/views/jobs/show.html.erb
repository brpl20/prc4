<p id="notice"><%= notice %></p>
<div class="col-md-12 col-sm-12">
  <div class="x_panel">
    <div class="x_title clearfix">
      <h1 class="pull-left"><%= @job.description %></h1>

      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
      </ul>
    </div>

    <div class="x_content">

      <div class="col-md-12">

        <section class="col-md-4">

            <h2 class="pull-left col-md-12 h-line"> <i class="fa fa-user"></i> <b>Informações da Tarefas</b></h2>

            <span class="col-md-12">
              <b>Descrição:</b>
              <%= @job.description %>
            </span>

            <span class="col-md-12">
              <b>Prazo:</b>
              <%= @job.deadline %>
            </span>

            <span class="col-md-12">
              <b>Responsável:</b>
              <%= @job.responsable %>
            </span>

            <span class="col-md-12">
              <b>Status:</b>
              <%= @job.status %>
            </span>

            <span class="col-md-12">
              <% if !@job.client.nil? %>
                <b>Cliente:</b>
                <%= @job.client.name %>
              <% else %>
                não há
              <% end %>
            </span>

            <span class="col-md-12">
              <b>Comentários:</b>
              <%= @job.comment %>
            </span>

        </section>

	  </div>

	</div>

    <div class="col-md-12">
      <%= link_to "Voltar", jobs_path, class:"btn btn-danger pull-right" %>
    </div>
